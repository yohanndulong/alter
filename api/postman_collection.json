{
  "info": {
    "name": "Alter API v2",
    "description": "Collection compl√®te des endpoints Alter API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Send Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": "{{base_url}}/auth/send-code"
          }
        },
        {
          "name": "Verify Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"code\": \"123456\"\n}"
            },
            "url": "{{base_url}}/auth/verify-code"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/users/profile"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"age\": 28,\n  \"gender\": \"male\",\n  \"bio\": \"Passionate about hiking and photography\",\n  \"interests\": [\"hiking\", \"photography\", \"reading\"],\n  \"preferenceAgeMin\": 25,\n  \"preferenceAgeMax\": 35,\n  \"preferenceDistance\": 50,\n  \"preferenceGenders\": [\"female\"]\n}"
            },
            "url": "{{base_url}}/users/profile"
          }
        }
      ]
    },
    {
      "name": "Onboarding",
      "item": [
        {
          "name": "Get Questions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/onboarding/questions"
          }
        },
        {
          "name": "Submit Answers",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"answers\": {\n    \"question_1\": \"Love\",\n    \"question_2\": [\"hiking\", \"reading\"],\n    \"question_3\": \"I love outdoor activities and meeting new people\"\n  }\n}"
            },
            "url": "{{base_url}}/onboarding/answers"
          }
        },
        {
          "name": "Complete Onboarding",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/onboarding/complete"
          }
        }
      ]
    },
    {
      "name": "Matching",
      "item": [
        {
          "name": "Discover Profiles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/matching/discover?limit=10",
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Like Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/matching/like/:userId"
          }
        },
        {
          "name": "Pass Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/matching/pass/:userId"
          }
        },
        {
          "name": "Get Matches",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/matching/matches"
          }
        },
        {
          "name": "Get Interested Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/matching/interested"
          }
        },
        {
          "name": "Unmatch",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/matching/matches/:matchId"
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Get Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/chat/matches/:matchId/messages"
          }
        },
        {
          "name": "Mark as Read",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/chat/matches/:matchId/read"
          }
        }
      ]
    },
    {
      "name": "Alter Chat AI",
      "item": [
        {
          "name": "Get AI Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/chat/ai/messages"
          }
        },
        {
          "name": "Send Message to Alter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"I love hiking and photography\"\n}"
            },
            "url": "{{base_url}}/chat/ai/messages"
          }
        },
        {
          "name": "Answer Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"questionId\": \"uuid-here\",\n  \"answer\": \"My favorite place is the mountains\",\n  \"selectedOptions\": [\"Option 1\", \"Option 2\"]\n}"
            },
            "url": "{{base_url}}/chat/ai/answer"
          }
        },
        {
          "name": "Initialize Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/chat/ai/initialize"
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload Photo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": "{{base_url}}/upload/photo"
          }
        }
      ]
    }
  ]
}
