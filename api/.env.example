# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database
# Option 1 (Recommandée) - URL PostgreSQL standard
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/alter_db

# Option 2 (Legacy) - Variables individuelles
# Décommentez si vous n'utilisez pas DATABASE_URL
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=postgres
# DB_DATABASE=alter_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email (Resend)
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM_NAME=Alter
EMAIL_FROM_ADDRESS=noreply@alter.app

# LLM (OpenRouter)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI (pour embeddings uniquement)
OPENAI_API_KEY=your-openai-api-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# WebSocket (séparer par des virgules pour plusieurs origines)
WEBSOCKET_CORS_ORIGIN=capacitor://localhost,https://staging.alterdating.com
